<config>
    <sections>
        <devopentaxvatnumber translate="label">
            <label>Tax Vat Number</label>
            <tab>devopsall</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label comment">
                            <label>Enabled</label>
                            <comment>
                                <![CDATA[Enable o disable the module.</span>]]>
                            </comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <label_input translate="label comment">
                            <label>Label input</label>
                            <comment>
                                <![CDATA[Custom label for input form, default: "Tax/VAT number"
</span>]]>
                            </comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </label_input>
                        <text_legend_input translate="label comment">
                            <label>Text legend input</label>
                            <comment>
                                <![CDATA[Custom text bottom input"
</span>]]>
                            </comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </text_legend_input>
                        <autocomplete_cif_number translate="label comment">
                            <label>Autocomplete input</label>
                            <comment>
                                <![CDATA[Autocomplete input with the number previously entered by the user.</span>]]>
                            </comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </autocomplete_cif_number>
                        <required_country translate="label comment">
                            <label>Required countries</label>
                            <comment>
                                <![CDATA[Countries with tax vat number input is required.</span>]]>
                            </comment>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>adminhtml/system_config_source_country</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <can_be_empty>1</can_be_empty>
                        </required_country>
                    </fields>
                </general>
            </groups>
        </devopentaxvatnumber>
    </sections>
</config>